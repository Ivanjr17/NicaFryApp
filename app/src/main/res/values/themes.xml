<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Tema del Splash-->
    <style name="Theme.NicaFryApp" parent="Theme.SplashScreen">
        <!--- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/black</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.NicaFryApp</item>

        <!--- Base aplication Theme -->
        <item name="android:colorPrimary">@color/blue_gray50</item>
        <item name="android:textColorPrimaryInverse">@color/my_primary</item>
        <item name="android:colorAccent">@color/white</item>
        <!-- Secondary brand color -->
        <item name="android:textColorSecondary">@color/my_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/my_secondary</item>
        <item name="android:colorActivatedHighlight">@color/black</item>
        <!--Status bar color-->
        <item name="android:statusBarColor">@color/my_primary</item>

    </style>
</resources>